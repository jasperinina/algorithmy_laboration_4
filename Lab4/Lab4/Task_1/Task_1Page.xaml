<Page x:Class="Lab4.Task_1.Task_1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Task_1Page" Height="900" Width="1200" Loaded="Window_Loaded">
    
    <Page.Resources>
        <!-- Подключение внешнего файла стилей -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <!-- Заголовок -->
        <TextBlock Text="Шаги сортировки"
                   Style="{StaticResource HeaderTextBlockStyle}"
                   Margin="20,20,0,20"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"/>
        
        <Canvas x:Name="Canvas" Margin="20,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1050" Height="320"/>
        
        <TextBox x:Name="LogTextBox" 
                 HorizontalAlignment="Left" 
                 Margin="20,400,0,0"
                 Style="{StaticResource OutputTextBoxStyle}"
                 Height="440"
                 Width="1050"
                 VerticalAlignment="Top"/>
    </Grid>
</Page>
